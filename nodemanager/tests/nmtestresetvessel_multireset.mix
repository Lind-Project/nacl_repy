"""
Author: Cosmin Barsan
Description:
This test is a modified version of the nmtestresetvessel.mix. It works much like the nmtestresetvessel.mix test, but instead resets the vessel twice consecutively, and also checks to see if the resources the vessel has available have been altered.

"""

include time.repy
include nmclient.repy
include rsa.repy

def get_restrictions(resourcestring):
  restrictionsstring = ''

  for line in resourcestring.split('\n'):
    if 'resource' in line:
      continue

    restrictionsstring = restrictionsstring + line + '\n'

  return restrictionsstring

if callfunc == 'initialize':

  pubkey = {'e': 1515278400394037168869631887206225761783197636247636149274740854708478416229147500580877416652289990968676310353790883501744269103521055894342395180721167L, 'n': }
  time_updatetime(34612)
  nmhandle = nmclient_createhandle(getmyip(), 1224)
  
  myhandleinfo = nmclient_get_handle_info(nmhandle)

  myhandleinfo['publickey'] = pubkey

  myhandleinfo['privatekey'] = {'q': , 'p': , 'd': }

  nmclient_set_handle_info(nmhandle, myhandleinfo)

  # get the vessel to use...
  myvessel = nmclient_listaccessiblevessels(nmhandle,pubkey)[0][0]

  nmclient_signedsay(nmhandle, "AddFileToVessel", myvessel, "hello","hellodata")

  nmclient_signedsay(nmhandle, "StartVessel", myvessel, "helloworld.repy")


  #get the starting restrictions
  fullresourcedata = nmclient_rawsay(nmhandle, "GetVesselResources",myvessel)
  startingrestrictions = get_restrictions(fullresourcedata)
  
  # reset vessel twice
  nmclient_signedsay(nmhandle, "ResetVessel", myvessel)
  nmclient_signedsay(nmhandle, "ResetVessel", myvessel)

  
  filelist = nmclient_signedsay(nmhandle, "ListFilesInVessel", myvessel)
  if filelist:
    raise Exception("Filelist is not empty after reset!")
  vessellog = nmclient_signedsay(nmhandle, "ReadVesselLog", myvessel)
  if vessellog:
    raise Exception("Vessellog is not empty after reset!")
    
  
  #get final restrictions
  fullresourcedata = nmclient_rawsay(nmhandle, "GetVesselResources",myvessel)
  finalrestrictions = get_restrictions(fullresourcedata)
  
  nmclient_signedsay(nmhandle, "AddFileToVessel", myvessel, "helloworld.repy","print 'hello world'\nwhile True: sleep(.1)")

  try:
    # this should succeed.   The previously started version should have been 
    # stopped by the reset.
    nmclient_signedsay(nmhandle, "StartVessel", myvessel, "helloworld.repy")
  finally:
    # always stop at the end...
    nmclient_signedsay(nmhandle, "StopVessel", myvessel)

  if finalrestrictions.strip() != startingrestrictions.strip():
    print "'"+finalrestrictions.strip()+"' != '"+startingrestrictions.strip()+"'"
    raise Exception, "Restrictions are not preserved!"


